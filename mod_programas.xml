<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" method="upgrade" client="site">
	<name>mod_programas</name>
	<creationDate>2016 september 22</creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license></license>
	<version>1.0.5</version>
	<description>MOD_PROGRAMAS_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_programas">mod_programas.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	
	<languages>
		<language tag="en-GB">language/en-GB.mod_programas.ini</language>
		<language tag="en-GB">language/en-GB.mod_programas.sys.ini</language>
		<language tag="pt-BR">language/pt-BR.mod_programas.ini</language>
		<language tag="pt-BR">language/pt-BR.mod_programas.sys.ini</language>
	</languages>
	
	<config>
    <fields name="params">
        <fieldset name="basic">
            <field name="mycategory" type="category" extension="com_programas" label="MOD_PROGRAMAS_CATEGORY_LABEL" description="MOD_PROGRAMAS_CATEGORY_DESC" />
            <field name="turn_on_font_awesome" type="radio"  class="btn-group btn-group-yesno" label="MOD_PROGRAMAS_LOAD_FONT_AWESOME" description="MOD_PROGRAMAS_LOAD_FONT_AWESOME_DESC" default="0">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
		    </field>
             <field name="module_or_custom_script" type="radio"  class="btn-group btn-group-yesno" label="MOD_PROGRAMAS_MODULE_OR_CUSTOM_SCRIPT" description="MOD_PROGRAMAS_MODULE_OR_CUSTOM_SCRIPT_DESC" default="0">
                <option value="0">MOD_PROGRAMAS_MODULE_SCRIPT</option>
                <option value="1">MOD_PROGRAMAS_MODULE_CUSTOM_SCRIPT</option>
		    </field>

            <field name="popup_width" type="text" default="500" label="MOD_PROGRAMAS_POPUP_WIDTH" description="MOD_PROGRAMAS_POPUP_WIDTH_DESC" />
            <field name="popup_height" type="text" default="500" label="MOD_PROGRAMAS_POPUP_HEIGHT" description="MOD_PROGRAMAS_POPUP_HEIGHT_DESC" />
            <field name="button_code" type="editor" buttons="true" class="row-fluid" rows="5" label="MOD_PROGRAMAS_BUTTONCODE" description="MOD_PROGRAMAS_BUTTONCODE_DESC" filter="raw" />
            <field name="builtin_script" type="textarea" buttons="true" class="row-fluid" rows="5" label="MOD_PROGRAMAS_BUILTIN_SCRIPT" description="MOD_PROGRAMAS_BUILTIN_SCRIPT_DESC" filter="raw" />
            <field name="custom_script" type="textarea" buttons="true" class="row-fluid" rows="5" label="MOD_PROGRAMAS_CUSTOM_SCRIPT" description="MOD_PROGRAMAS_CUSTOM_SCRIPT_DESC" filter="raw" />
            <field name="custom_message" type="editor" buttons="true" class="row-fluid" rows="5" label="MOD_PROGRAMAS_CUSTOM_MESSAGE" description="MOD_PROGRAMAS_CUSTOM_MESSAGE_DESC" filter="raw" />

                 <field name="enable_defaults" type="radio"  class="btn-group btn-group-yesno" label="MOD_PROGRAMAS_ENABLE_DEFAULTS" description="MOD_PROGRAMAS_ENABLE_DEFAULTS_DESC" default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
		        </field>
                <field name="enable_disable" type="list" multiple="true" label="ENABLE_DISABLE_LABEL" description="ENABLE_DISABLE_DESC" default="" maxlength="0" class="inputbox">
                <option value="programas_title">MOD_PROGRAMAS_TITLE</option>
                <option value="id">MOD_PROGRAMAS_FIELD_ID</option>
                <option value="state">MOD_PROGRAMAS_FIELD_STATE</option>
                <option value="program_name">MOD_PROGRAMAS_FIELD_PROGRAM_NAME</option>
                <option value="category">MOD_PROGRAMAS_FIELD_CATEGORY</option>
                <option value="start_time">MOD_PROGRAMAS_FIELD_START_TIME</option>
                <option value="end_time">MOD_PROGRAMAS_FIELD_END_TIME</option>
                <option value="program_link">MOD_PROGRAMAS_FIELD_PROGRAM_LINK</option>
                <option value="days_of_the_week">MOD_PROGRAMAS_FIELD_DAYS_OF_THE_WEEK</option>
                <option value="program_description">MOD_PROGRAMAS_FIELD_PROGRAM_DESCRIPTION</option>
                <option value="broadcaster_name">MOD_PROGRAMAS_FIELD_BROADCASTER_NAME</option>
                <option value="broadcaster_email">MOD_PROGRAMAS_FIELD_BROADCASTER_EMAIL</option>
                <option value="broadcaster_image">MOD_PROGRAMAS_FIELD_BROADCASTER_IMAGE</option>
                <option value="genre">MOD_PROGRAMAS_FIELD_GENRE</option>
                <option value="broadcaster_link">MOD_PROGRAMAS_FIELD_BROADCASTER_LINK</option>
                <option value="broadcaster_facebook">MOD_PROGRAMAS_FIELD_BROADCASTER_FACEBOOK</option>
                <option value="broadcaster_twitter">MOD_PROGRAMAS_FIELD_BROADCASTER_TWITTER</option>
                <option value="broadcaster_instagram">MOD_PROGRAMAS_FIELD_BROADCASTER_INSTAGRAM</option>
                <option value="broadcaster_snapchat">MOD_PROGRAMAS_FIELD_BROADCASTER_SNAPCHAT</option>
                <option value="broadcaster_telegram">MOD_PROGRAMAS_FIELD_BROADCASTER_TELEGRAM</option>
                <option value="broadcaster_whatsapp">MOD_PROGRAMAS_FIELD_BROADCASTER_WHATSAPP</option>
                <option value="broadcaster_blog">MOD_PROGRAMAS_FIELD_BROADCASTER_BLOG</option>
                <option value="broadcaster_bio">MOD_PROGRAMAS_FIELD_BROADCASTER_BIO</option>
		    </field>
        </fieldset>
    </fields>

	</config>
</extension>
